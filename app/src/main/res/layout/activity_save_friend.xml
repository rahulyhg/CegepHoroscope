<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3D3D3D"
    tools:context="com.hroscope.cegep.cegephoroscope.Friend_Save_FriendList.SaveFriend">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/user"
            app:civ_border_color="#FFF"
            app:civ_border_width="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3D3D3D"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="90dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/gallary"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_gravity="center"

                android:layout_weight="1"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/image_gallery" />

            <ImageButton
                android:id="@+id/upload"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="center"

                android:layout_weight="1"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/upload_image" />

        </LinearLayout>


        <!--<ImageView-->
        <!--android:id="@+id/imageView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="140dp"-->

        <!--app:srcCompat="@drawable/user" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:background="#434343"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-12dp"
                android:layout_weight="1"

                app:srcCompat="@drawable/circle" />

            <TextView
                android:id="@+id/initials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="S"
                android:textColor="#ffffff"
                android:layout_marginTop="-3dp"
                android:gravity="center"
                android:layout_marginLeft="-55dp"
                />

            <EditText
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@color/trans"
                android:ems="10"
                android:inputType="text"
                android:text="Name"
                android:textColor="#fff"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/editname"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="center"

                app:srcCompat="@drawable/pencil" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#434343"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/calender"
                android:layout_width="50dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/calendar" />
            <EditText
                android:id="@+id/dateOfBirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="17dp"
                android:ems="10"
                android:background="@color/trans"
                android:inputType="date"
                android:textColor="#fff"/>
            <ImageView
                android:id="@+id/EditDate"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/pencil" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="#434343"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/zodSign"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@mipmap/aries" />

            <EditText
                android:id="@+id/zodiac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_weight="1"
                android:background="@color/trans"
                android:ems="10"
                android:inputType="text"
                android:text="Name"
                android:textColor="#fff"

                android:textSize="20sp" />

            <ImageView
                android:id="@+id/editzod"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"

                android:src="@mipmap/next" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#434343"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/chineseSign"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@mipmap/rat" />
            <EditText
                android:id="@+id/chineseHoroscope"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:layout_marginLeft="17dp"
                android:background="@color/trans"
                android:text="Name"
                android:textColor="#fff"

                android:textSize="20sp"
                android:inputType="text" />

            <ImageView
                android:id="@+id/editchinesezod"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"

                android:src="@mipmap/next" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonSave"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/roundbutton"
                android:text="Save"
                android:textColor="#fff" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
