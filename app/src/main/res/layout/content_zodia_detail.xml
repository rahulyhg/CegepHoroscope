<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3D3D3D"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <!--tools:context="com.hroscope.cegep.cegephoroscope.zodiacDetail.ZodiaDetail"
    tools:showIn="@layout/activity_zodia_detail"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/todaypersonimg"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"

                app:srcCompat="@mipmap/connection" />

            <TextView
                android:id="@+id/todaytitlezod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Aries"
                android:textColor="#fff"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/todayimgeshare"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"


                app:srcCompat="@mipmap/share" />

        </LinearLayout>

        <ImageView
            android:id="@+id/todayzodimage"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            app:srcCompat="@mipmap/aries" />

        <TextView
            android:id="@+id/todaydate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="3/21 to 4/19"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Today"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/todaydate1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Saturday Jun 03 2017"
            android:textColor="#fff"
            android:textSize="23sp"
            android:textStyle="bold" />



    </LinearLayout>
    <com.hroscope.cegep.cegephoroscope.PagerContainer
        android:layout_below="@+id/"
        android:id="@+id/pager_container"
        android:layout_width="match_parent"
        android:background="#3D3D3D"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp" />

    </com.hroscope.cegep.cegephoroscope.PagerContainer>
</RelativeLayout>
