<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hroscope.cegep.cegephoroscope.Profile">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3D3D3D">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rabbitButton"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/user"
                app:civ_border_width="4dp"
                app:civ_border_color="#fff"/>


            <!--<ImageView-->
                <!--android:id="@+id/imageView"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="140dp"-->

                <!--app:srcCompat="@drawable/user" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="#434343"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@android:drawable/ic_notification_overlay" />
                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:ems="10"
                    android:background="@color/trans"
                    android:inputType="text"
                    android:textColor="#fff"
                    android:textSize="20sp"/>
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"

                    app:srcCompat="@drawable/pencil" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#434343"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/calender"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/calendar" />
                <EditText
                    android:id="@+id/dateOfBirth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:layout_marginLeft="30dp"
                    android:background="@color/trans"
                    android:inputType="date"
                    android:textColor="#fff"
                    android:textSize="20sp"/>
                <ImageView
                    android:id="@+id/EditDate"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/pencil" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/zondicLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#434343"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/zodSign"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/taurus" />
                <TextView
                    android:id="@+id/zodiac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:layout_marginLeft="30dp"
                    android:background="@color/trans"
                    android:text="Taurus"
                    android:textColor="#fff"
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#434343"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/chineseSign"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/rat" />
                <TextView
                    android:id="@+id/chineseHoroscope"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:layout_marginLeft="30dp"
                    android:background="@color/trans"
                    android:text="Rat"
                    android:textSize="20sp"
                    android:textColor="#fff"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearFriend"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#434343"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/friendsimage"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/friends" />
                <TextView
                    android:id="@+id/friends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:text="Friends"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:textColor="#ffffff"
                    android:textSize="20sp"

                    android:background="@color/trans"
                    android:inputType="date" />
                <ImageView
                    android:id="@+id/EditFreinds"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/pencil" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
